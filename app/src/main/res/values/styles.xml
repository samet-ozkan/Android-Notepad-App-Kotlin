<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subtext">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/background_blue</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="RecyclerViewScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrollbar_track</item>
    </style>

    <style name="TextInput" parent="Text">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="TitleInput" parent="Title">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BlackButton" parent="Text">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ColorItem">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/RoundedImageView</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="dividerColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


</resources>