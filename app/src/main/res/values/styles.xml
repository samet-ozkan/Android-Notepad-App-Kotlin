<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Subtext">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="RecyclerViewScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrollbar_track</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ColorItem">
        <item name="android:padding">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/RoundedImageView</item>
    </style>

</resources>